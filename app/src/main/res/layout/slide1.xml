<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment">

    <ImageView android:layout_width="150dp"

               android:layout_marginTop="60dp"
               android:layout_height="80dp"
               android:layout_alignParentTop="true"
               android:src="@drawable/g_logo"
               android:layout_centerVertical="true"
               android:layout_centerHorizontal="true"/>


    <ImageView android:layout_width="match_parent"

               android:layout_height="350dp"
android:id="@+id/imageSlideOne"
               android:src="@drawable/slide3"
              android:layout_centerInParent="true"/>


    <TextView android:layout_width="match_parent"
            android:layout_below="@+id/imageSlideOne"
              android:gravity="center"
              android:textColor="@color/black"
              android:layout_marginRight="10dp"
              android:layout_marginLeft="10dp"
              android:textSize="18dp"

              android:text="Freedom to build your own website from anywhere !" android:layout_height="wrap_content"/>

</RelativeLayout>