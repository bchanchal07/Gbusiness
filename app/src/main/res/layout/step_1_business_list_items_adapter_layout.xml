<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:outlineProvider="none"
    android:backgroundTint="@color/transparent_color"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="8dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/item_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="5sp"
                android:paddingTop="2sp"
                android:paddingRight="5sp"
                android:paddingBottom="2sp"
                android:visibility="visible">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="60dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_item_qr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle"
                        android:src="@drawable/default_img">

                    </de.hdodenhof.circleimageview.CircleImageView>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Payment Method: "
                            android:textColor="@color/com_facebook_blue"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-light"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_payment_method"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="vsdfsdf"
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/button_bg_black"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="Payment Email: "
                            android:textColor="@color/com_facebook_blue"
                            android:fontFamily="sans-serif-light"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_payment_email"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:tooltipText="info@educationgmail.com"
                            android:text="info@educationgmail.com"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/button_bg_black"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="Payment URL: "
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/com_facebook_blue"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_payment_url"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:tooltipText="url"
                            android:text="kasdjnvkjsnvkjsnvkjdfnakdf"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/button_bg_black"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Bank Detail: "
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/com_facebook_blue"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_bank_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="vsdfsdf"
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/button_bg_black"
                            android:textSize="11sp" />

                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_update"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:elevation="10dp"
                            android:src="@drawable/ic_edit" />

                        <ImageView
                            android:id="@+id/iv_delete_item"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_delete"
                            app:tint="@color/liteOrangeOpaCity" />
                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

