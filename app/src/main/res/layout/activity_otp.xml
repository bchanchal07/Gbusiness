<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo_noty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Thank You for Choosing Us!" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Enter OTP"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/fieldOne"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/EditTextbackcolor"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/fieldTwo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:background="@color/EditTextbackcolor"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/fieldThree"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:background="@color/EditTextbackcolor"

            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/fieldFour"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:background="@color/EditTextbackcolor"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/fieldFive"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:background="@color/EditTextbackcolor"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/fieldSix"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:background="@color/EditTextbackcolor"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center" />

    </LinearLayout>

    <androidx.cardview.widget.CardView

        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:background="@drawable/background_gradient"
        android:outlineAmbientShadowColor="@color/colorPrimaryTint"
        android:outlineSpotShadowColor="@color/colorPrimaryTint"
        app:cardCornerRadius="20dp"
        app:cardElevation="25dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/button_gradent"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="submit"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="bold"

            />

        <!--    <Button
                android:id="@+id/LoginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:textColor="@color/fui_bgGoogle"
                android:textAlignment="center"
                android:theme="@style/ParmieryButton"
        />-->


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/resendOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Resend OTP"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />


</LinearLayout>
