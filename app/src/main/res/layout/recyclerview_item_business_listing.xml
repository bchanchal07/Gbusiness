<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutDomainRv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:elevation="2dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient">

            <ImageView
                android:id="@+id/ivCategorySoftware"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:padding="10dp"
                android:background="@color/white"
                android:src="@drawable/gallry_place_hoder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDomainName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Domain Name"
                android:textColor="@color/com_facebook_blue"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivCategorySoftware"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDomainTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Domain title"
                android:textColor="@color/grey"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivCategorySoftware"
                app:layout_constraintTop_toBottomOf="@+id/tvDomainName" />

            <TextView
                android:id="@+id/tvDomainDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:text="dj flakdjflakjd lfkajdlfaskdadkjflakdj flakdjf lakdfj lakdfjkladj"
                android:textSize="11sp"
                app:layout_constraintBottom_toTopOf="@+id/btnVisitWebsite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivCategorySoftware"
                app:layout_constraintTop_toBottomOf="@+id/tvDomainTitle" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnVisitWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_bg_blue"
                android:drawableEnd="@drawable/ic_double_arrow_18"
                android:drawableTint="@color/white"
                android:paddingHorizontal="5dp"
                android:text="Visit Website"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivCategorySoftware" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGetQuotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_bg_yellow"
                android:drawableEnd="@drawable/ic_double_arrow_18"
                android:drawableTint="@color/white"
                android:paddingHorizontal="5dp"
                android:text="Get Quotes"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>