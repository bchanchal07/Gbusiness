<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient">

        <LinearLayout
            android:id="@+id/mainLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_header"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/directDateJoin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.80"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:typeface="sans" />


            <TextView
                android:id="@+id/directStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:elevation="10dp"
                android:gravity="center"
                android:minWidth="70dp"
                android:padding="5dp"
                android:text=""
                android:textAllCaps="true"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/directPhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/mainLay" />

        <TextView
            android:id="@+id/directName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/directPhoto"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <LinearLayout

            android:id="@+id/layoutOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/mainLay"
            android:layout_toEndOf="@+id/directPhoto"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvService"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="0.64"
                android:padding="3dp"
                android:text="@string/services"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvTotalPurchas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.36"
                android:maxLines="1"
                android:padding="3dp"
                android:singleLine="true"
                android:text="@string/total_purchase"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </LinearLayout>


        <LinearLayout

            android:id="@+id/layoutTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/layoutOne"
            android:layout_toEndOf="@+id/directPhoto"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:id="@+id/directServices"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="0.64"
                android:padding="2dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/directTotalPurchas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.36"
                android:padding="2dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvEarningMy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="30dp"
            android:maxLines="1"
            android:padding="3dp"
            android:singleLine="true"
            android:text="My Earning"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/directMyEarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEarningMy"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>