                        android:textStyle="bold" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.60"
                        android:background="@drawable/cell_back_table_white"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Free SSL Certificate"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.22"
                        android:background="@drawable/cell_back_table_white"
                        android:gravity="center"
                        android:padding="3dp"
                        android:src="@drawable/ic_double_check" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.18"
                        android:background="@drawable/cell_back_table_white"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.60"
                        android:background="@drawable/cell_back_table"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Spam-Free"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.22"
                        android:background="@drawable/cell_back_table"
                        android:gravity="center"
                        android:padding="3dp"
                        android:src="@drawable/ic_double_check" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.18"
                        android:background="@drawable/cell_back_table"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text=""
