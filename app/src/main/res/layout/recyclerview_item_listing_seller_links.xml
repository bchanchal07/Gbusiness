<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <libs.mjn.fieldset.FieldSetView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginRight="0dp"
        android:layout_weight="0.90"
        app:fsv_borderAlpha="0.75"
        app:fsv_borderColor="@color/grey"
        app:fsv_borderRadius="5dp"
        app:fsv_borderWidth="1.5dp"
        app:fsv_legend="Seller Url"
        app:fsv_legendColor="@color/grey"
        app:fsv_legendFont="lobster.ttf"
        app:fsv_legendPosition="left"
        app:fsv_legendSize="12sp"
        tools:layout_editor_absoluteX="40dp">

        <EditText
            android:id="@+id/etSellerUrlCreateList"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@android:color/transparent"
            android:hint="eg. https://www.xyz.com/sellerpage"
            android:inputType="textWebEditText"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/colorHintGrey"
            android:textSize="14sp" />
    </libs.mjn.fieldset.FieldSetView>

    <ImageView
        android:id="@+id/ivRemoveSellerUrlLayout"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_weight="0.10"
        android:src="@drawable/ic_remove_circle_24"
        android:visibility="visible" />

</LinearLayout>
