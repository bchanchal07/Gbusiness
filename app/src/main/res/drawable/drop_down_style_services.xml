<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="#7EFFFFFF" />

            <padding
                android:left="2dp"
                android:right="4dp"/>
            <gradient
                android:startColor="#FFDBE1"
                android:endColor="#FFDBE1"
                android:angle="90"
                android:type="linear"
                android:useLevel="true"/>
        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="end"
            android:src="@drawable/ic_down_arrow" />
    </item>
</layer-list>