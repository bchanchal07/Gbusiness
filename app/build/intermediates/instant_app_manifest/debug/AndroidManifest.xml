            android:screenOrientation="portrait" />
        <activity
            android:name="com.milkyway.gbusiness.activities.ForgotActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.milkyway.gbusiness.activities.MainActivity"
